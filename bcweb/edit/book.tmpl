<h1>Editing book</h1>

<form action="/view/book" method="POST">
<input type="hidden" id="id" name="id" value="{{.id}}">
<div>Name: <input type="text" id="name" name="name" value="{{.name}}"/>
<div>Year: <input type="text" id="year" name="year" value="{{.year}}"/>
<div>Synopsis: <input type="text" id="synopsis" name="synopsis" value="{{.synopsis}}"/>
<div><input type="submit" value="Save"/></div>
</form>
